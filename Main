import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Blender myBlender = new Blender();
        Scanner scanner = new Scanner(System.in);
        int choice;
//bucle para mostrar el menu and to show the option
//basically its wha the user will seee

        do {
            System.out.println("\n--- Menú de la Licuadora ---");
            System.out.println("1. Encender la licuadora");
            System.out.println("2. Llenar la licuadora");
            System.out.println("3. Aumentar velocidad");
            System.out.println("4. Reducir velocidad");
            System.out.println("5. Consultar velocidad");
            System.out.println("6. Consultar si está llena");
            System.out.println("7. Vaciar la licuadora");
            System.out.println("8. Apagar la licuadora");
            System.out.println("9. Salir");
            System.out.print("Elige una opción: ");
            choice = scanner.nextInt();

            switch (choice) {
                case 1 -> myBlender.turnOn();
                case 2 -> myBlender.Fill();
                case 3 -> myBlender.SpeedUp();
                case 4 -> myBlender.SpeedDown();
                case 5 -> System.out.println("Velocidad actual: " + myBlender.GetSpeed());
                case 6 -> System.out.println("¿Está llena? " + (myBlender.IsFull() ? "Sí" : "No"));
                case 7 -> myBlender.Empty();
                case 8 -> myBlender.turnOff();
                case 9 -> System.out.println("Saliendo del programa...");
                default -> System.out.println("Opción inválida. Intenta nuevamente.");
            }
        } while (choice != 9);

        scanner.close();
    }
}


