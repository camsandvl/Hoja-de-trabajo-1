//Clase Functions almacena la implementación de los métodos llamados en IBlender
public class Functions implements IBlender {
    private int speed;
    private boolean isOn;
    private boolean isFull;

    // Constructor
    Public Blender() {
        this.speed = 0; // Licuadora apagada
        this.isOn = false;
        this.isFull = false;
    }

    @Override
    public void SpeedUp() {
        if (!isOn) {
            System.out.println ("Encender licuadora"):
            return;
        }
        if (!isFull) {
            System.out.println ("Llenar licuadora");
            return
        }
        if (speed < 10) {
            System.out.println ("La velocidad se aumentó a: "+ speed);
            return;
        } else {
            System.out.println ("Ya se alcanzó el máximo de velocidad");
        }
    }

    @Override
    public boolean IsFull() {
        return isFull;
    }

    @Override 
    public void Fill() {
        if (isFull) {
            System.out.println ("La licuadora ya está llena");
            return;
        } else {
            System.out.println ("Licuadora llena");
        }
    }

    @Override
    public void Empty() {
        if (!isFull) {
            System.out.println("La licuadora ya está vacía");
            return;
        } else {
            System.out.println ("Licuadora vacía");
        }
    }

    @Override 
    public void SpeedDown() {
        if (!isOn) {
            System.out.println ("Encender licuadora"):
            return;
        }
        if (!isFull) {
            System.out.println ("Llenar licuadora");
            return
        }
        if (speed > 10) {
            System.out.println ("La velocidad disminuyó a: "+ speed);
            return;
        } else {
            System.out.println ("Ya se alcanzó el mínimo de velocidad");
        }
    }